rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }

      match /tax_rates/{id} {
        allow read: if true;
      }
    }
  }
  match /databases/{database}/{document=**} {
  	allow read, write: if request.auth != null;
  }
  match /databases/{database}/organizations/{organization}/{document=**} {
    allow read, write: if (request.auth.token.role == 'Admin' || request.auth.token.role == 'Supervisor') &&
      request.auth.token.organization == {organization};
    allow read: if request.auth.token.organization == {organization};
  }
  match /databases/{database}/organizations/{organization}/documents {
    match /route {
      allow read, write: if request.auth.token.organization == {organization};
    }
    match /service_logs {
      allow read, create, update: if request.auth.token.organization == {organization};
    }
  }
}