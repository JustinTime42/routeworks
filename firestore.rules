rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /organizations/{organization}/{document=**} {
    	allow read, write: if (request.auth.token.role == 'Admin') && (request.auth.token.organization == {organization}) 
    }
    match /admin/{document=**} {
    	allow read, write: if request.auth.token.role == 'Admin'
    }
    match /driver/driver_lists/route/{route} {
    	allow read, write: if request.auth != null
    }
    match /driver/{document=**} {
      allow read: if request.auth != null
      allow write: if request.auth.token.role == 'Admin'
    }
    match /service_logs/{document=**} {
      allow read, write: if request.auth != null
    }
  }
}